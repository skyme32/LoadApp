<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/txt_desc_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/txt_status"
            app:layout_constraintTop_toTopOf="@+id/txt_status"
            app:layout_constraintStart_toStartOf="@+id/txt_file_name_desc"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="184dp"
            android:layout_marginStart="280dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>



    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1500">

        <KeyFrameSet>
            <!-- BUTTON -->
            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="0"
                app:motionTarget="@id/btn_ok_detail" />
            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@id/btn_ok_detail" />

            <!-- IMAGEVIEW OF DOWNLOAD -->
            <KeyAttribute
                android:scaleX="-1"
                app:framePosition="0"
                app:motionTarget="@id/img_dowload_state" />
            <KeyAttribute
                android:scaleX="1"
                app:framePosition="100"
                app:motionTarget="@id/img_dowload_state" />

            <!-- TEXVIEW FILE NAME -->
            <KeyAttribute
                android:scaleX="3.0"
                app:framePosition="0"
                app:motionTarget="@id/txt_file_name_desc" />
            <KeyAttribute
                android:scaleX="1.0"
                app:framePosition="100"
                app:motionTarget="@id/txt_file_name_desc" />

        </KeyFrameSet>
    </Transition>
</MotionScene>
